kind: autotools
sources:
- kind: tar
  url: tar_github_com:/brailcom/speechd/releases/download/0.10.2/speech-dispatcher-0.10.2.tar.gz
- kind: patch
  path: files/speech-dispatcher/Fix-build-after-glib-e38982df.patch
build-depends:
- freedesktop-sdk.bst:components/perl-xml-parser.bst
- freedesktop-sdk.bst:components/texinfo.bst
- freedesktop-sdk.bst:public-stacks/buildsystem-autotools.bst
depends:
- core-deps/dotconf.bst
- core-deps/espeak.bst
- sdk/glib.bst
- freedesktop-sdk.bst:components/sndfile.bst
- freedesktop-sdk.bst:bootstrap-import.bst
- freedesktop-sdk.bst:components/libpulse.bst
variables:
  conf-local: >-
    --with-espeak
    --with-pulse
    --with-oss=no

  local_flags: -fcommon

config:
  install-commands:
    (>):
    - |
      rm '%{install-root}%{infodir}/dir'
