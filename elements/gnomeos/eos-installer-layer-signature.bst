kind: manual

build-depends:
- freedesktop-sdk.bst:components/jq.bst
- freedesktop-sdk.bst:components/systemd.bst
- gnomeos/os-release-user.bst
- filename: gnomeos/eos-installer-layer.bst
  strict: true
  config:
    location: '/eos-installer-layer'

environment:
  XZFLAGS: '-T%{max-jobs}'
environment-nocache:
- XZFLAGS

variables:
  repart-seed: c4ffa971-b583-4d0d-bcc8-a9bc6a109aec

sources:
- kind: local
  path: files/boot-keys/SYSEXT.key
- kind: local
  path: files/boot-keys/SYSEXT.crt

config:
  build-commands:
  - |
    chmod 0600 SYSEXT.key

  - |
    mkdir -p definitions

  - |
    cat <<EOF >definitions/10-eos-installer.conf
    [Partition]
    Type=root
    Label=gnomeos_usr_eos-installer_%A
    Verity=data
    VerityMatchKey=root
    CopyBlocks=/eos-installer-layer/eos-installer.root.raw
    EOF

  - |
    cat <<EOF >definitions/20-eos-installer-verity.conf
    [Partition]
    Type=root-verity
    Label=gnomeos_usr_eos-installer_v_%A
    Verity=hash
    VerityMatchKey=root
    Minimize=best
    EOF

  - |
    cat <<EOF >definitions/30-eos-installer-verity-signature.conf
    [Partition]
    Type=root-verity-sig
    Label=gnomeos_usr_eos-installer_s_%A
    Verity=signature
    VerityMatchKey=root
    EOF

  - |
    mkdir -p tmp

  - |
    [ -d "%{install-root}" ] || mkdir -p "%{install-root}"

  - |
    TMPDIR='%{build-root}/tmp' \
    SYSTEMD_LOG_LEVEL=debug \
      systemd-repart \
        --definitions=definitions \
        --empty=create \
        --size=auto \
        --dry-run=no \
        --discard=no \
        --offline=true \
        --no-pager \
        --private-key=SYSEXT.key \
        --certificate=SYSEXT.crt \
        --seed %{repart-seed} \
        "%{install-root}/eos-installer.raw" \
        --json=pretty \
        >repart.json

  install-commands:
  - |
    label="$(jq -r '(.[] | select(.type | match("^root-.*-verity$"))).label' repart.json)"
    image_version="${label##gnomeos_usr_eos-installer_v_}"
    mv "%{install-root}/eos-installer.raw" "%{install-root}/eos-installer_${image_version}.raw"
